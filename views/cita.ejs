<body>
  <div>
    <div class="overlay" onclick="hideIvitePopup()"></div>
    <div class="invitePopup">
        <input type="text" value="..." id="citaLink" readonly/>
        <button class="btn" onclick="copyInvite()">Copiar</button>
    </div>
  </div>
  <div class="main">
    <div class="main__left">
      <div class="main__videos">
        <div id="video-grid"></div>
      </div>
      <div class="main__controls">
        <div class="main__controls_block">
          <div
            class="main__controls_button"
            id="muteButton"
            onclick="muteUnmute()"
          >
            <i class="fa fa-microphone"></i>
            <span>Audio Activo</span>
          </div>
          <div
            class="main__controls_button"
            id="playPauseVideo"
            onclick="playStop()"
          >
            <i class="fa fa-video-camera"></i>
            <span>Video Activo</span>
          </div>
        </div>

        <div class="main__controls_block">
          <div class="main__controls_button" id="showIvite"
          onclick="showInvite()">
            <i class="fa fa-users"></i>
            <span>Participantes</span>
          </div>
          <!-- <div class="main__controls_button" id="chat_Btn"
          onclick="showChat(this)">
            <i class="fa fa-comment"></i>
            <span>Chat</span>
          </div> -->
        </div>

        <div class="main__controls_block">
          <div class="main__controls_button leaveMeeting" id="leave-meeting">
            <i class="fa fa-times"></i>
            <span class="">Salir</span>
          </div>
        </div>
      </div>
    </div>
