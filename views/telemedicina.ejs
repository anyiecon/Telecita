<html>

<head>
  <meta charset='utf-8'>
  <meta http-equiv='X-UA-Compatible' content='IE=edge'>
  <title>TELEMEDICINA</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
  <link rel="stylesheet" href="stylesTelemedi.css" />
  <link rel="stylesheet" href="IncicioStylesTM.css">
  <link rel="stylesheet" href="responsTelemedi.css">
  <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/peerjs/1.3.1/peerjs.min.js.map"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script>
    const ROOM_ID = "<%= citaId %>"
  </script>
  <script src="alert.js"></script>
</head>

<body class="body">
  <div class="body2">
    <div id="header">
      <img  class="logo_toc" src="https://toc.com.co/wp-content/uploads/2018/09/TOC-WEB-logo-home.png" />
      <div class="toc"><i class="fa fa-phone"><a>(+57) 314 640 7093 / (+57) 311 340 8773 / (+57) 302 452 0953</a></i></div>
      <div class="tocs"><i class="fa fa-envelope"><a class="correo" href="mailto:info@toc.com.co">info@toc.com.co</a></i></div>
    </div>
    <div class="inicio" id="nickWrap">
      <div class="inicio_p">
        <h1 class="text_ini">Bienvenido</h1>
        <input class="nickname" type="text" placeholder="ingresa tu nombre" id="nickname" />
        <button id="nickFrom">Ingresar a la llamada</button>
        <div id="userName"></div>
      </div>
    </div>
  </div>
  <div class="main">
    <div id="myModal" class="modal">
      <div class="modal-content"></div>
      <div class="overlay" onclick="hideIvitePopup()"></div>
      <div class="invitePopup">
        <div class="modal_input">
          <!-- <p>Invita por correo</p>
          <input id="correo_paci" type="text" class="coreo_paci" /> -->
          <div class="inv_Link">
            <p class="invite">Invita por Link</p>
            <input type="text" value="..." id="citaLink" readonly />
          </div>
        </div>
      </div>
      <button class="btn" onclick="copyInvite()">Copiar</button>
      <!-- <button class="btn" onclick="Inv_Link()">Invitar</button> -->
      <button id="cerrar-modal" class="btn" onclick="Closemodal()">Cancelar</button>
    </div>

    <div class="main__left">
      <div>
        <div class="main__videos">
          <div id="video-user"></div>

          <video id="rightVideo" playsinline autoplay muted></video>
        </div>
      </div>
      <div class="main__buttons">
        <div class="main__buttons_block">
          <div class="main__buttons_button" id="muteButton" onclick="muteUnmute()">
            <i class="fa fa-microphone"></i>
            <span>Audio Activo</span>
          </div>
          <div class="main__buttons_button" id="playPauseVideo" onclick="playStop()">
            <i class="fa fa-video-camera"></i>
            <span>Video Activo</span>
          </div>
        </div>

        <div class="main__buttons_block">
          <div class="main__buttons_button" id="showIvite" class="invited" onclick="showInvite()">
            <i class="fa fa-users"></i>
            <span>Participantes</span>
          </div>
          <div class="main__buttons_button" id="chat_Btn" onclick="showChat(this)">
            <i class="fa fa-comment" id="chatAudio"></i>
            <span>Chat</span>
          </div>
          <!-- <img src="../public/image/PDF.png"/> -->
          <!-- <div class="main__buttons_button" id="share">
            <i class="fa fa-laptop" id="share"></i>
            <span>Presentar</span>
          </div>  -->
        </div>

        <div class="main__buttons_block">
          <div class="main__buttons_button closecita" id="leave-meeting">
            <i onclick="closeCita()" class="fa fa-times"></i>
            <span class="">Salir</span>
          </div>
        </div>
      </div>
    </div>
    <div class="ChatCita">
      <div class="main__right">
        <div class="main__header" id="showChat">
          <div id="chats" onclick="CloseChat()">
            <h6>Comunicate en la llamada</h6>
            <i class="fa fa-times" id="close"></i>
          </div>
        </div>
        <div class="main__chat__window" id="main__chat__window">
          <ul class="messages" id="all_messages"></ul>
        </div>
        <div class="main__message_container">
          <input type="text" id="chat_message" placeholder="Envía tu mensaje..."></input>
          <!-- <textarea type="text" id="chat_message" placeholder="Envía tu mensaje.."></textarea> -->
          <input type="text" id="chat_message-url"></input>
          <div class="main__button" id="main__buttons">
            <label for="add_docs"><i class="fa fa-file-pdf-o"></i></label>
            <!-- <label for="add_docs"><img src="../public/image/adjuntar.png"></img></label> -->
            <input class="add_docs" id="add_docs" type="file" multiple />
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="https://webrtc.github.io/adapter/adapter-latest.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="scriptTelemedi.js"></script>
  <script src="modalTelemedi.js"></script>
  <script src="chatTelemedi.js"></script>

</body>

</html>